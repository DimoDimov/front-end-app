{
  "name": "front-end-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:dev": "npm-run-all --parallel bundle:dev type-check build:sass",
    "build:prod": "npm-run-all --parallel bundle:prod type-check build:sass",
    "bundle:prod": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "bundle:dev": "esbuild src/index.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/index.js",
    "bundle:tsc": "tsc -p tsconfig.json",
    "build:sass": "node-sass src/sass/main.scss src/public/stylesheets/main.css --output-style compressed",
    "clean": "rm -rf dist",
    "docker:pre": "npm-run-all --parallel docker:pre:esbuild docker:pre:node-sass",
    "docker:pre:esbuild": "node node_modules/esbuild/install.js",
    "docker:pre:node-sass": "node node_modules/node-sass/scripts/install.js",
    "type-check": "tsc --noEmit",
    "nodemon": "nodemon",
    "start": "node dist/index.js",
    "start:dev": "npm run nodemon",
    "start:docker:dev": "npm run docker:pre && npm run nodemon",
    "lint": "eslint src/ --ext .js,.ts,",
    "lint:fix": "eslint src/ --ext .js,.ts, --fix",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts'",
    "prettier:fix": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "esbuild": "^0.11.21",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "node-sass": "^6.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@jest/globals": "^26.6.2"
  }
}
